<?xml version="1.0"?>
<robot name="picar_b" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ============================================================ -->
  <!-- Base link (ground projection) -->
  <!-- ============================================================ -->
  <link name="base_link" />

  <!-- ============================================================ -->
  <!-- Chassis -->
  <!-- ============================================================ -->
  <link name="chassis">
    <inertial>
      <mass value="0.400" />
      <origin rpy="0 0 0" xyz="0.07 0.0 0.035" />
      <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0013" iyz="0" izz="0.0014" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0.07 0.0 0.035" />
      <geometry>
        <box size="0.18 0.12 0.04" />
      </geometry>
      <material name="dark_grey">
        <color rgba="0.3 0.3 0.3 1.0" />
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.07 0.0 0.035" />
      <geometry>
        <box size="0.18 0.12 0.04" />
      </geometry>
    </collision>
  </link>

  <joint name="chassis_to_base_link" type="fixed">
    <parent link="base_link" />
    <child link="chassis" />
  </joint>

  <!-- ============================================================ -->
  <!-- Rear wheels (driven) -->
  <!-- ============================================================ -->
  <link name="rear_wheel_left">
    <inertial>
      <mass value="0.025" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1.08e-05" ixy="0" ixz="0" iyy="1.08e-05" iyz="0" izz="1.91e-05" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.033" length="0.026" />
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0" />
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.033" length="0.026" />
      </geometry>
    </collision>
  </link>
  <joint name="rear_wheel_left_joint" type="continuous">
    <parent link="chassis" />
    <child link="rear_wheel_left" />
    <origin rpy="-1.5708 0 0" xyz="0.0 0.073 0.033" />
    <axis xyz="0 0 1" />
  </joint>

  <link name="rear_wheel_right">
    <inertial>
      <mass value="0.025" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1.08e-05" ixy="0" ixz="0" iyy="1.08e-05" iyz="0" izz="1.91e-05" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.033" length="0.026" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.033" length="0.026" />
      </geometry>
    </collision>
  </link>
  <joint name="rear_wheel_right_joint" type="continuous">
    <parent link="chassis" />
    <child link="rear_wheel_right" />
    <origin rpy="1.5708 0 0" xyz="0.0 -0.073 0.033" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- ============================================================ -->
  <!-- Front steering (Ackermann) -->
  <!-- ============================================================ -->
  <link name="steering_link">
    <inertial>
      <mass value="0.005" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1e-07" ixy="0" ixz="0" iyy="1e-07" iyz="0" izz="1e-07" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size="0.01 0.08 0.01" />
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0" />
      </material>
    </visual>
  </link>
  <joint name="steering_joint" type="revolute">
    <parent link="chassis" />
    <child link="steering_link" />
    <origin rpy="0 0 0" xyz="0.14 0.0 0.033" />
    <limit effort="10" velocity="1" lower="-0.6" upper="0.6" />
    <axis xyz="0 0 1" />
  </joint>

  <link name="front_wheel_left">
    <inertial>
      <mass value="0.025" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1.08e-05" ixy="0" ixz="0" iyy="1.08e-05" iyz="0" izz="1.91e-05" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.033" length="0.026" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.033" length="0.026" />
      </geometry>
    </collision>
  </link>
  <joint name="front_wheel_left_joint" type="continuous">
    <parent link="steering_link" />
    <child link="front_wheel_left" />
    <origin rpy="-1.5708 0 0" xyz="0.0 0.04 0.0" />
    <axis xyz="0 0 1" />
  </joint>

  <link name="front_wheel_right">
    <inertial>
      <mass value="0.025" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1.08e-05" ixy="0" ixz="0" iyy="1.08e-05" iyz="0" izz="1.91e-05" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.033" length="0.026" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <cylinder radius="0.033" length="0.026" />
      </geometry>
    </collision>
  </link>
  <joint name="front_wheel_right_joint" type="continuous">
    <parent link="steering_link" />
    <child link="front_wheel_right" />
    <origin rpy="1.5708 0 0" xyz="0.0 -0.04 0.0" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- ============================================================ -->
  <!-- Camera pan/tilt head -->
  <!-- ============================================================ -->
  <link name="camera_pan_link">
    <inertial>
      <mass value="0.010" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1e-06" ixy="0" ixz="0" iyy="1e-06" iyz="0" izz="1e-06" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.01" />
      <geometry>
        <cylinder radius="0.015" length="0.02" />
      </geometry>
      <material name="grey" />
    </visual>
  </link>
  <joint name="camera_pan_joint" type="revolute">
    <parent link="chassis" />
    <child link="camera_pan_link" />
    <origin rpy="0 0 0" xyz="0.09 0.0 0.055" />
    <limit effort="1" velocity="1" lower="-1.57" upper="1.57" />
    <axis xyz="0 0 1" />
  </joint>

  <link name="camera_tilt_link">
    <inertial>
      <mass value="0.010" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1e-06" ixy="0" ixz="0" iyy="1e-06" iyz="0" izz="1e-06" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.015" />
      <geometry>
        <box size="0.03 0.025 0.025" />
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0" />
      </material>
    </visual>
  </link>
  <joint name="camera_tilt_joint" type="revolute">
    <parent link="camera_pan_link" />
    <child link="camera_tilt_link" />
    <origin rpy="0 0 0" xyz="0.0 0.0 0.02" />
    <limit effort="1" velocity="1" lower="-0.5" upper="0.8" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- Camera optical frame -->
  <link name="camera_link">
    <inertial>
      <mass value="0.005" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1e-07" ixy="0" ixz="0" iyy="1e-07" iyz="0" izz="1e-07" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size="0.005 0.02 0.02" />
      </geometry>
      <material name="green">
        <color rgba="0.0 0.8 0.0 1.0" />
      </material>
    </visual>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="camera_tilt_link" />
    <child link="camera_link" />
    <origin rpy="0 0 0" xyz="0.02 0.0 0.025" />
  </joint>

  <!-- ============================================================ -->
  <!-- Ultrasonic sensor -->
  <!-- ============================================================ -->
  <link name="ultrasonic_link">
    <inertial>
      <mass value="0.005" />
      <origin rpy="0 0 0" xyz="0 0 0" />
      <inertia ixx="1e-07" ixy="0" ixz="0" iyy="1e-07" iyz="0" izz="1e-07" />
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size="0.02 0.04 0.015" />
      </geometry>
      <material name="silver">
        <color rgba="0.8 0.8 0.8 1.0" />
      </material>
    </visual>
  </link>
  <joint name="ultrasonic_joint" type="fixed">
    <parent link="camera_tilt_link" />
    <child link="ultrasonic_link" />
    <origin rpy="0 0 0" xyz="0.02 0.0 0.0" />
  </joint>

</robot>
